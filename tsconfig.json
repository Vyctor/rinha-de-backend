{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "ES2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
  },
  "include": [
    "src",
    "test"
  ]
}